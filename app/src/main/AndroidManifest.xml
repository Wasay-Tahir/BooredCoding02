<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Storage permissions for Android 10 and below -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="29" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    
    <!-- Storage permissions for Android 11+ -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" 
        tools:ignore="ScopedStorage" />

    <application
        android:name="com.shadow.quicksave.App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.shadow.quicksave.MainActivity"
            android:exported="true" />
        <activity
            android:name="com.shadow.quicksave.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shadow.quicksave.StreamingActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.shadow.quicksave.DownloadActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.shadow.quicksave.CommandExampleActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
    </application>

</manifest>